@model IEnumerable<Database.Models.Batch>

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mx-auto">
    <!-- Stats -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
        <div class="bg-gray-800 p-6 rounded-lg shadow-lg">
            <h3 class="text-lg font-medium text-gray-400">Total Generated Games</h3>
            <p class="text-3xl font-bold text-white" id="totalGames">@ViewBag.TotalGames</p>
        </div>
        <div class="bg-gray-800 p-6 rounded-lg shadow-lg">
            <h3 class="text-lg font-medium text-gray-400">Total Generated Moves</h3>
            <p class="text-3xl font-bold text-white" id="totalMoves">@ViewBag.TotalMoves</p>
        </div>
        <div class="bg-gray-800 p-6 rounded-lg shadow-lg">
            <h3 class="text-lg font-medium text-gray-400">Active Generations</h3>
            <p class="text-3xl font-bold text-white" id="activeGenerations">@ViewBag.ActiveGenerations</p>
        </div>
    </div>

    <!-- Active Game Generations -->
    <div class="bg-gray-800 p-6 rounded-lg shadow-lg">
        <h2 class="text-xl font-semibold mb-4 text-white">Live Game Generations</h2>
        <div id="activeGamesContainer">
            @await Html.PartialAsync("_ActiveGamesPartial", Model)
        </div>
    </div>
</div>

@section Scripts {
    <!-- No need for SignalR connection here anymore - it's in _Layout.cshtml -->
}