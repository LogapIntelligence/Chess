@{
    ViewData["Title"] = "Database Maintenance";
}

<div class="container mx-auto">
    <div class="bg-gray-800 p-6 rounded-lg shadow-lg">
        <h2 class="text-2xl font-bold text-white mb-6">Database Maintenance</h2>

        @if (TempData["Success"] != null)
        {
            <div class="bg-green-800 text-green-100 p-4 rounded mb-4">
                @TempData["Success"]
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="bg-red-800 text-red-100 p-4 rounded mb-4">
                @TempData["Error"]
            </div>
        }

        <div class="mb-6">
            <h3 class="text-lg font-semibold text-white mb-3">Fix Game Results</h3>
            <p class="text-gray-300 mb-4">
                This will scan all games in the database and fix their results based on the final position evaluation.
                Games ending in checkmate will be properly marked as wins/losses.
            </p>
            <form asp-action="FixGameResults" method="post">
                @Html.AntiForgeryToken()
                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                    Fix Game Results
                </button>
            </form>
        </div>

        <div class="mt-8">
            <h3 class="text-lg font-semibold text-white mb-3">Database Statistics</h3>
            <div id="stats-container" class="text-gray-300">
                <button onclick="loadStats()" class="bg-gray-700 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded">
                    Load Statistics
                </button>
                <div id="stats-display" class="mt-4"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function loadStats() {
            fetch('/Maintenance/DatabaseStats')
                .then(response => response.json())
                .then(data => {
                    let html = '<div class="grid grid-cols-2 gap-4">';
                    html += `<div class="bg-gray-700 p-4 rounded">
                                <div class="text-sm text-gray-400">Total Games</div>
                                <div class="text-2xl font-bold">${data.totalGames}</div>
                             </div>`;
                    html += `<div class="bg-gray-700 p-4 rounded">
                                <div class="text-sm text-gray-400">Total Moves</div>
                                <div class="text-2xl font-bold">${data.totalMoves}</div>
                             </div>`;
                    html += `<div class="bg-gray-700 p-4 rounded">
                                <div class="text-sm text-gray-400">Unfinished Games</div>
                                <div class="text-2xl font-bold">${data.unfinishedGames}</div>
                             </div>`;
                    html += `<div class="bg-gray-700 p-4 rounded">
                                <div class="text-sm text-gray-400">Games Without Moves</div>
                                <div class="text-2xl font-bold">${data.gamesWithoutMoves}</div>
                             </div>`;
                    html += '</div>';

                    html += '<div class="mt-4"><h4 class="font-semibold mb-2">Game Results:</h4><ul>';
                    data.gameResults.forEach(r => {
                        html += `<li>${r.result}: ${r.count} games</li>`;
                    });
                    html += '</ul></div>';

                    document.getElementById('stats-display').innerHTML = html;
                })
                .catch(error => {
                    document.getElementById('stats-display').innerHTML =
                        '<div class="text-red-400">Error loading statistics</div>';
                });
        }
    </script>
}