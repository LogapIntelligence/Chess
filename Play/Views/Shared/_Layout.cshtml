<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UCI Chess Interface</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Play.styles.css" asp-append-version="true" />
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        'chess-light': '#f0d9b5',
                        'chess-dark': '#b58863',
                        'chess-highlight': '#f7dc6f',
                        'chess-move': '#9bc53d',
                        'lichess-bg': '#161512',
                        'lichess-surface': '#262421',
                        'lichess-border': '#3c3c3c'
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-lichess-bg text-gray-100 min-h-screen flex flex-col">
    <header class="bg-lichess-surface border-b border-lichess-border shadow-lg">
        <nav class="container mx-auto px-4">
            <div class="flex items-center justify-between h-16">
                <!-- Brand -->
                <a class="text-xl font-bold text-white hover:text-gray-300 transition-colors" 
                   asp-area="" asp-controller="Home" asp-action="Index">
                    UCI Chess Interface
                </a>

                <!-- Desktop Navigation -->
                <div class="hidden md:flex items-center space-x-6">
                    <a class="text-gray-300 hover:text-white transition-colors py-2 px-3 rounded-md hover:bg-gray-700" 
                       asp-area="" asp-controller="Home" asp-action="Index">
                        Chess
                    </a>
                    <a class="text-gray-300 hover:text-white transition-colors py-2 px-3 rounded-md hover:bg-gray-700" 
                       asp-area="" asp-controller="Home" asp-action="Privacy">
                        Privacy
                    </a>
                </div>

                <!-- Mobile menu button -->
                <div class="md:hidden">
                    <button id="mobile-menu-button" class="text-gray-300 hover:text-white focus:outline-none focus:text-white">
                        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                        </svg>
                    </button>
                </div>
            </div>

            <!-- Mobile Navigation -->
            <div id="mobile-menu" class="md:hidden hidden pb-4">
                <div class="flex flex-col space-y-2">
                    <a class="text-gray-300 hover:text-white transition-colors py-2 px-3 rounded-md hover:bg-gray-700 block" 
                       asp-area="" asp-controller="Home" asp-action="Index">
                        Chess
                    </a>
                    <a class="text-gray-300 hover:text-white transition-colors py-2 px-3 rounded-md hover:bg-gray-700 block" 
                       asp-area="" asp-controller="Home" asp-action="Privacy">
                        Privacy
                    </a>
                </div>
            </div>
        </nav>
    </header>

    <div class="flex-1">
        <main role="main" class="container mx-auto px-4 py-6">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-lichess-surface border-t border-lichess-border mt-auto">
        <div class="container mx-auto px-4 py-4">
            <div class="text-center text-gray-400 text-sm">
                &copy; 2025 - UCI Chess Interface - 
                <a class="text-gray-300 hover:text-white transition-colors" 
                   asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <!-- Mobile menu toggle script -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');
            
            if (mobileMenuButton && mobileMenu) {
                mobileMenuButton.addEventListener('click', function() {
                    mobileMenu.classList.toggle('hidden');
                });
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>